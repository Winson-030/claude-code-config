{
  "project_name": "claude-code-config",
  "description": "My Claude code configuration repository",
  "default_model": "kimi-k2-thinking",
  "allow_bash_commands": true,
  "auto_save": true,
  "theme": "dark",
  "code_style": {
    "indent_size": 2,
    "indent_style": "space",
    "end_of_line": "lf",
    "charset": "utf-8",
    "trim_trailing_whitespace": true,
    "insert_final_newline": true
  },
  "file_filters": {
    "ignore_patterns": [
      "node_modules/",
      "*.log",
      ".DS_Store",
      "dist/",
      "build/",
      ".git/",
      "*.tmp",
      "*.temp"
    ]
  },
  "git": {
    "auto_commit": false,
    "commit_message_template": "{type}: {description}",
    "default_branch": "main"
  }
}